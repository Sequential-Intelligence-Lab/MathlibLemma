lemma uniformity_eq_iInf_gauge
    {E : Type*} [AddCommGroup E] [Module ℝ E] [TopologicalSpace E]
    [UniformSpace E] [LocallyConvexSpace ℝ E] :
    (UniformSpace.uniformity : Filter (E × E)) =
      ⨅ (U : Set E)
        (hU : U ∈ { s : Set E | s ∈ nhds (0 : E) ∧ Convex ℝ s }),
        Filter.comap (fun z : E × E => gauge U (z.1 - z.2))
          (nhds (0 : ℝ)) := by
  sorry